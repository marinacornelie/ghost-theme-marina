<div class="card">
    <div class="border">
        <div class="card-header">
             <a href="{{url}}" class="card-header-title">{{title}}</a> 
        </div>
        <div class="post-image">
            {{#if feature_image}}
                <a href="{{url}}">
                    <figure class="image is-4by3">
                        <img src="{{feature_image}}" alt="Feature Image">  
                    </figure>
                </a>
            {{else}}
                <figure class="image is-4by3"></figure>
            {{/if}}
        </div> 
        <footer class="card-footer">
            <p class="card-footer-item">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
            </p>
            <p class="card-footer-item">
                {{#foreach tags limit="1"}}
                    <a href="{{url}}" class="">{{name}}</a>
                {{/foreach}}
                {{#has tag="count:>1"}}
                    <span>,...</span>
                {{/has}}
             </p>
        </footer>
    </div>
</div>